@model IEnumerable<lifu.Models.Role>

@{
    ViewBag.Title = "Index";
}

<h2>角色列表</h2>

<p>
    @Html.ActionLink("建立角色", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Subject)
        </th>
       
        <th>
            @Html.DisplayNameFor(model => model.Poster)
        </th>
       
        <th>
            @Html.DisplayNameFor(model => model.InitDate)
        </th>
       
        <th>功能</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Subject)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Poster)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.InitDate)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
